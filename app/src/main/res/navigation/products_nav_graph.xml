<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/products_nav"
    app:startDestination="@id/allProductsFragment">

    <fragment
        android:id="@+id/allProductsFragment"
        android:name="com.rtchubs.pharmaerp.ui.add_product.AllProductsFragment"
        android:label="Products"
        tools:layout="@layout/fragment_all_products">
        <action
            android:id="@+id/action_allProductsFragment_to_addProductFragment"
            app:destination="@id/addProductFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/addProductFragment"
        android:name="com.rtchubs.pharmaerp.ui.add_product.AddProductFragment"
        android:label="Product Details"
        tools:layout="@layout/fragment_add_product">
        <argument
            android:name="product"
            app:argType="com.rtchubs.pharmaerp.models.products.PharmaProduct"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="isEdit"
            android:defaultValue="false"
            app:argType="boolean" />
    </fragment>
</navigation>